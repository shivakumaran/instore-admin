<div class="row">
  <div class="span9 msi-head"><h4></h4></div>
</div>

<div class="row button-box top">
  <div class="span9" style="text-align:right;">
    <%#= link_to '<i class="icon-edit icon-white"></i>&nbsp;Edit'.html_safe,  edit_venue_path(@venue), :class => "btn btn-success", :alt => "Edit venue", :title => "Edit Venue" %>
    <%
            if(@venue.disabled)
                      title = 'Enable'
                      activeClass = 'btn-success'
            else
                      title = 'Disable'
                      activeClass = 'btn-warning'
            end
            
    %>
<%# title = @user.disabled ? 'Enable' : 'Disable' %>
<%= link_to '<i class="icon-edit icon-white"></i>&nbsp;Authorise Your Venue'.html_safe, foursquare_access_venue_path(@venue), :class => "btn btn-danger", :alt=>"Authorise Your Venue", :title=>"Authorise Your Venue" %>
<%= link_to "<i class='icon-ban-circle icon-white'></i>&nbsp;#{title}".html_safe, venue_path(@venue,"venue[disabled]"=>@venue.disabled ? false : true), :class => "btn #{activeClass}", :confirm => "Are you sure you want to #{@venue.disabled ? 'enable' : 'disable' }" , :method => :put, :alt=>"#{title} Venue", :title=>"#{title} Venue" %>
<%= link_to '<i class="icon-trash icon-white"></i>&nbsp;Delete'.html_safe, venue_path(@venue,"venue[archive]"=>true), :class => "btn btn-danger", :confirm => 'Are you sure you want to delete?', :method => :delete, :alt=>"Delete Venue", :title=>"Delete Venue" %>
    <!-- <a href="#" class="btn btn-danger delete"><i class="icon-trash icon-white"></i>&nbsp;Delete</a> -->
  </div>
</div>	
<div class="msi-list details-view">
  <div class="row">
    <div class="span4">
      Name: 
    </div>
    
    <div class="span4">
      <%= @venue.name unless @venue.name.blank? %>
    </div>
  </div>
  <div class="row">
    <div class="span4">
      Organisation: 
    </div>
    <div class="span4">
      <%= @venue.organisation.name unless @venue.organisation.blank? && @venue.organisation.name.nil? %>
    </div>
  </div>
  <div class="row">
    <div class="span4">
      Access Code: 
    </div>
    <div class="span4">
      <%= @venue.access_code unless @venue.access_code.blank? %>
    </div>
  </div>
  <div class="row">
    <div class="span4">
      Disabled: 
    </div>
    <div class="span4">
      <%= @venue.disabled unless @venue.disabled.blank? %>
    </div>
  </div>     
  <div class="row">
    <div class="span4">
      Created at: 
    </div>
    <div class="span4">
      <%= @venue.created_at %>
    </div>
  </div> 
  <div class="row">
    <div class="span4">
      Updated at: 
    </div>
    <div class="span4">
      <%= @venue.updated_at %>
    </div>
  </div>
  <div class="row">
    <div class="span4">
      User Access Token: 
    </div>
    <div class="span4">
      <%= @venue.user_access_token %>
    </div>
  </div>
</div>	<!-- END of msi-list div -->
<div class="row button-box bottom">
  <div class="span9" style="text-align:right;">
  	<%= link_to '<i class="icon-edit icon-white"></i>&nbsp;Authorise Your Venue'.html_safe, foursquare_access_venue_path(@venue), :class => "btn btn-danger",  :alt=>"Authorise Your Venue", :title=>"Authorise Your Venue" %>
    <%= link_to "<i class='icon-ban-circle icon-white'></i>&nbsp;#{title}".html_safe, venue_path(@venue,"venue[disabled]"=>@venue.disabled ? false : true), :class => "btn #{activeClass}", :confirm => "Are you sure you want to #{@venue.disabled ? 'enable' : 'disable' }" , :method => :put, :alt=>"#{title} Venue", :title=>"#{title} Venue" %>
	<%= link_to '<i class="icon-trash icon-white"></i>&nbsp;Delete'.html_safe, venue_path(@venue,"venue[archive]"=>true), :class => "btn btn-danger", :confirm => 'Are you sure you want to delete?', :method => :delete, :alt=>"Delete Venue", :title=>"Delete Venue" %>
    
  </div>
</div>					
